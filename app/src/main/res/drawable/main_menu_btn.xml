<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <size
                android:width="300dp"
                android:height="80dp" />
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/bright_yellow_green" />
            <gradient
                android:angle="-90"
                android:startColor="@color/light_gold"
                android:endColor="@color/bright_yellow" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape android:shape="rectangle" >
            <size
                android:width="300dp"
                android:height="80dp" />
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/blue" />
            <gradient
                android:angle="90"
                android:startColor="@color/gold"
                android:endColor="@color/light_gold" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <size
                android:width="300dp"
                android:height="80dp" />
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <corners
                android:radius="10dp" />
            <stroke
                android:width="3dp"
                android:color="@color/blue" />
            <gradient
                android:angle="-90"
                android:startColor="@color/gold"
                android:endColor="@color/light_gold" />
        </shape>
    </item>

</selector>